<?xml version="1.0" encoding="UTF-8" ?>
<index name="sku" cardinality="goodsWebSpu" agent="web,app,wap,android,ios,pad">
    <!-- 过滤条件 -->
    <filters>
        <field name="skuId" type="string" hit="web,app,wap"></field>
        <field name="goodsSn" type="string" hit="web,app,wap" pattern="[0-9A-Za-z]{9}" idSearch="true"></field>
        <field name="goodsTitle" type="string" hit="web,app,wap"></field>
        <field name="goodsImg" type="string" hit="web,app,wap"></field>
        <field name="displayPrice" type="double" hit="web,app,wap"></field>
        <field name="goodsWebSpu" type="string" hit="web,app,wap"></field>
        <field name="stockFlag" type="int" hit="web,app,wap"></field>
        <field name="goodsNumber" type="int" hit="web,app,wap"></field>
        <field name="upTime" type="long" hit="web,app,wap"></field>
        <fields name="categories" type="inner">
            <field name="catId" type="int" hit="web,app,wap"></field>
            <field name="catName" type="string" hit="web,app,wap"></field>
            <field name="level" type="int" hit="web,app,wap"></field>
        </fields>
    </filters>
    
    <!-- TODO 后面需要添加的功能 -->
    
    <!-- 聚合 -->
    <aggs></aggs>
    
    <!-- 权重 -->
    <weights></weights>
    
</index>